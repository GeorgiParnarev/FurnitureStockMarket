@using FurnitureStockMarket.Models.ShopingCart;

@model IEnumerable<CartItemViewModel>

@{
    ViewBag.Title = "Shoping cart";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model.Count() == 0)
{
    <p >Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total: @Model.Sum(item => item.Price * item.Quantity).ToString("C")</p>
}