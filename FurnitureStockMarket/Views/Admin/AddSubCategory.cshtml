@using FurnitureStockMarket.Models.Admin;

@model AddSubCategoryViewModel

@{
    ViewBag.Title = "Choose product sub-category";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddSubCategory" method="post">    
            <div class="visually-hidden">
                <label asp-for="CategoryId" class="form-label-add-edit"></label>
                <input asp-for="CategoryId" class="form-control" aria-required="true" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label-add-edit">Name</label>
                <input asp-for="Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>
