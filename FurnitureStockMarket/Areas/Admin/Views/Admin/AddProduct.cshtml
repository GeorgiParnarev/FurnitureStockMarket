@using FurnitureStockMarket.Areas.Admin.Models.Admin;

@model AddProductViewModel

@{
    ViewBag.Title = "Create a new product";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddProduct" method="post">
            <div class="visually-hidden">
                <label asp-for="CategoryId" class="form-label-add-edit"></label>
                <input asp-for="CategoryId" class="form-control" aria-required="true" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label-add-edit">Name</label>
                <input asp-for="Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label-add-edit">Description</label>
                <input asp-for="Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label-add-edit">Price</label>
                <input asp-for="Price" class="form-control" aria-required="true" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SubCategoryId" class="form-label-add-edit">Sub category</label>
                <select asp-for="SubCategoryId" class="form-control" aria-required="true">
                    @foreach (var subCategory in Model.SubCategories)
                    {
                        <option value="@subCategory.Key">@subCategory.Value</option>
                    }
                </select>
                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Brand" class="form-label-add-edit">Brand</label>
                <input asp-for="Brand" class="form-control" aria-required="true" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label-add-edit">Quantity</label>
                <input asp-for="Quantity" class="form-control" aria-required="true" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImageURL" class="form-label-add-edit">ImageURL</label>
                <input asp-for="ImageURL" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>        
    </div>
</div>
